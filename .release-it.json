{
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}",
		"push": true
	},
	"github": {
		"release": true,
		"releaseName": "Release ${version}"
	},
	"npm": {
		"publish": true
	},
	"hooks": {
		"before:init": ["npm run build", "npm run check"],
		"after:release": "echo Successfully released ${name} v${version} to npm."
	}
}
