{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["node_modules/**/*", "dist/**/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "es5",
			"jsxQuoteStyle": "double",
			"quoteStyle": "double",
			"lineWidth": 110
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"noUnusedTemplateLiteral": "warn"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
